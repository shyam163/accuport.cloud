# Vessel Configuration Example
# Copy this file to vessels_config.yaml and add your actual tokens

vessels:
  - vessel_id: "mv_example"
    vessel_name: "M.V Example"
    email: "vessel@example.com"
    auth_token: "YOUR_LABCOM_AUTH_TOKEN_HERE"
    sampling_points:
      - AB1  # Auxiliary boiler 1
      - AB2  # Auxiliary boiler 2
      - CB   # Composite Boiler
      - HW   # Hotwell
      - AE1  # Auxiliary engine 1
      - AE2  # Auxiliary engine 2
      - AE3  # Auxiliary engine 3
      - ME   # Main Engine 1
      - PW1  # Potable water Galley
      - PW2  # Potable Water acc
      - GW   # Treated Sewage
      - SD1  # Main engine Unit 1 Scavenge Drain
      - SD2  # Main engine Unit 2 Scavenge Drain
      - SD3  # Main engine Unit 3 Scavenge Drain
      - SD4  # Main engine Unit 4 Scavenge Drain
      - SD5  # Main engine Unit 5 Scavenge Drain
      - SD6  # Main engine Unit 6 Scavenge Drain

